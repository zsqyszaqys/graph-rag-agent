# === 前端默认配置 ===
# API 网关地址
FRONTEND_API_URL = 'http://localhost:8000'
# 默认使用的 Agent 名称
FRONTEND_DEFAULT_AGENT = 'naive_rag_agent'
# 是否默认开启调试面板
FRONTEND_DEFAULT_DEBUG = false
