SERVER_HOST = '0.0.0.0'
# 监听端口
SERVER_PORT = 8000
# 是否热重载
SERVER_RELOAD = false
# 日志级别
SERVER_LOG_LEVEL = 'info'
# 工作进程数（优先于 FASTAPI_WORKERS）
